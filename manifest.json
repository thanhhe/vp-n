{
  "manifest_version":2,
  "version":"0.1.0",
  "name":"OpenVPN Finder",
  "description":"Display up-to-date list of free OpenVPNs provided by VPN Gate (University of Tsukuba)",
  "permissions": [
    "*://www.vpngate.net/api/*",
    "downloads",
    "storage"
  ],
  "background":{
    "persistent": false,
    "scripts":[
      "common.js"
    ]
  },

  "browser_action":{
    "default_popup": "data/popup/index.html"
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  }
}
